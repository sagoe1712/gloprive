<?xml version="1.0" encoding="UTF-8"?>

<!-- config.xml reference: https://build.phonegap.com/docs/config-xml -->
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.glo.prive"
        version   = "1.0.0">

    <name>Glo Prive</name>

    <description>
        Glo Prive a lifestyle app that connects you to partners around the world offering you discounts and gift
    </description>

    <author href="http://gloprive.com" email="info@gloprive.com">
        Glo Prive
    </author>
	
	<feature name="http://api.phonegap.com/1.0/device" />

   <preference name="phonegap-version" value="3.7.0" />
  
    <preference name="orientation" value="portrait" />      
    <preference name="target-device" value="universal" />     
   
   

    <!-- Plugins -->

    <!-- Core plugins -->
    
    
    <gap:plugin name="org.apache.cordova.dialogs" />
    <gap:plugin name="org.apache.cordova.inappbrowser" />
    <gap:plugin name="org.apache.cordova.splashscreen" />
 

   
    <!--
        <gap:plugin name="com.phonegap.plugins.barcodescanner" />
    -->

    <!-- Define app icon for each platform. -->
    <icon src="icon.png" />
    

    <!-- Define app splash screen for each platform. -->
    <gap:splash src="small.jpg"       gap:platform="android" gap:qualifier="port-ldpi" />
    <gap:splash src="normal.jpg"       gap:platform="android" gap:qualifier="port-mdpi" />
    <gap:splash src="large.jpg"       gap:platform="android" gap:qualifier="port-hdpi" />
    <gap:splash src="xlarge.jpg"      gap:platform="android" gap:qualifier="port-xhdpi" />
   
	
	

  

    <access origin="*"/>
   

</widget>
